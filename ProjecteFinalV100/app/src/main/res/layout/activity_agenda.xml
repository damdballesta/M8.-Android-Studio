<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/bgrosa"
    tools:context=".AgendaActivity">

    <EditText
        android:id="@+id/edtFechaDesde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:duplicateParentState="false"
        android:editable="false"
        android:enabled="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/edtNombreEvento"
        android:hint="Nom Mascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtFechaDesde"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtNomAmo"
        android:hint="Nom Amo"
        android:layout_below="@+id/edtNombreEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtTelefon"
        android:layout_below="@+id/edtNomAmo"
        android:hint="Telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ltvDesde"
        android:text="Hora Inici:"
        android:layout_below="@+id/edtTelefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>
    
    <EditText
        android:id="@+id/edtHoraInicio"
        android:layout_below="@+id/ltvDesde"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ltvHasta"
        android:text="Hora Fi:"
        android:layout_below="@+id/edtHoraInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtHoraHasta"
        android:layout_below="@+id/ltvHasta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>
    
    <EditText
        android:id="@+id/edtDescripcion"
        android:hint="Descripcio"
        android:layout_below="@+id/edtHoraHasta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>
    
    <Button
        android:id="@+id/btnGuardarAgenda"
        android:text="Guardar"
        android:layout_below="@+id/edtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/btnCancelarAgenda"
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/btnGuardarAgenda"
        android:layout_alignEnd="@+id/edtDescripcion"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffff"/>

</RelativeLayout>